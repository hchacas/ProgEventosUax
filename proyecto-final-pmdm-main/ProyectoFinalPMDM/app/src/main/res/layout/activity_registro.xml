<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/fondo1"
    android:orientation="vertical"
    tools:context=".Registro">
    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:src="@drawable/login3"
        android:layout_gravity="center"

        />
    <EditText
        android:id="@+id/registroUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input"
        android:hint="   Usuario"
        android:drawableLeft="@drawable/user"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:layout_margin="10dp"
        />
    <EditText
        android:id="@+id/registroTelefono"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input"
        android:inputType="phone"
        android:drawableLeft="@drawable/telefono"
        android:hint="   Telefono"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:layout_margin="10dp"
        />
    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="   Correo Electronico"
        android:inputType="textEmailAddress"
        android:drawableLeft="@drawable/email"
        android:textColorHint="@color/black"
        android:background="@drawable/round"
        android:layout_margin="10dp"
        />
    <EditText
        android:id="@+id/contrase単a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="   Contrase単a"
        android:drawableLeft="@drawable/pass"
        android:inputType="textPassword"
        android:textColorHint="@color/black"
        android:background="@drawable/round"
        android:layout_margin="10dp"
        />
    <EditText
        android:id="@+id/contrase単a2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input"
        android:hint="   Repetir Contrase単a"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:drawableLeft="@drawable/pass"
        android:textColorHint="@color/black"
        android:layout_margin="10dp"
         />

    <Button
        android:id="@+id/registrarse2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="    Registrarse     "
        android:layout_gravity="center"
        android:drawableLeft="@drawable/registrarse"
        android:textColor="@color/black"
        android:background="@drawable/round_button2"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="O"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_margin="10dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        >
        <Button
        android:id="@+id/google"
        android:layout_width="wrap_content"
            android:gravity="center"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
          android:text="  Iniciar con google    "
            android:drawableLeft="@drawable/google"
        android:background="@drawable/round_button2"
        />

    </LinearLayout>


</LinearLayout>